<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#780022"
    tools:context=".SplashActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView3"
        android:layout_width="1500dp"
        android:layout_height="950dp"
        android:src="@drawable/spiders3"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textViewSistemas2"
        android:layout_width="510dp"
        android:layout_height="86dp"
        android:layout_marginTop="-506dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/spiderman_tobey"
        android:text="🕷️🕸️🕸️🕷️"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        app:layout_constraintTop_toBottomOf="@+id/imageLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:id="@+id/imageViewlogo"
            android:layout_width="200dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/spider2" />

        <ImageView
            android:id="@+id/imageViewlogo2"
            android:layout_width="220dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/spider1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSistemas"
        android:layout_width="510dp"
        android:layout_height="46dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/spiderman_tobey"
        android:text="BE  GREATHER"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/imageLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/spiderman_andrew"
        android:text="TOGETHER"
        android:textAlignment="center"
        android:textColor="#F8F4F5"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSistemas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
